<?php

/**
 * Implements hook_cron().
 */
function pantheon_secrets_cron() {
  if (\Drupal::config('pantheon_secrets.settings')->get('pantheon_secrets_sync')) {
    \Drupal::service('pantheon_secrets.secrets_syncer')->sync();
    \Drupal::logger('pantheon_secrets')->notice('Pantheon Secrets synced.');
  }
}